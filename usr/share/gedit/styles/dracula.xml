<style-scheme id="dark-dracula" name="Dark Dracula" version="1.0">
	<author>PROxZIMA</author>
	<_description>A darker dracula theme for Gedit</_description>

	<!-- Dracula Palette -->
    <color name="butter"                        value="#fce94f"/>
    <color name="chameleon"                     value="#8ae234"/>
    <color name="skyblue"                       value="#729fcf"/>
    <color name="plum"                          value="#ad7fa8"/>
    <color name="chocolate"                     value="#e9b96e"/>
    <color name="scarletred"                    value="#ef2929"/>
    <color name="aluminium"                     value="#eeeeec"/>
    <color name="white"                         value="#ffffff"/>
    <color name="bone-white"                    value="#f8f8f0"/>
    <color name="weird-gray"                    value="#909194"/>

    <color name="dark1"                         value="#1e1e1e"/>
    <color name="dark2"                         value="#303030"/>
    <color name="background"                    value="#11131c"/>
    <color name="current-line"                  value="#44475a"/>
    <color name="selection"                     value="#282a32"/>
    <color name="foreground"                    value="#f8f8f2"/>
    <color name="comment"                       value="#6272a4"/>
    <color name="cyan"                          value="#8be9fd"/>
    <color name="green"                         value="#50fa7b"/>
    <color name="orange"                        value="#ffb86c"/>
    <color name="pink"                          value="#ff79c6"/>
    <color name="purple"                        value="#bd93f9"/>
    <color name="red"                           value="#ff5555"/>
    <color name="yellow"                        value="#f1fa8c"/>

    <!-- Global Settings -->
    <style name="text"                          foreground="bone-white" background="background"/>
    <style name="selection"                     background="selection"/>
    <style name="cursor"                        foreground="white" background="white"/>
    <style name="current-line"                  foreground="current-line" background="current-line"/>
    <style name="current-line-number"           background="dark2"/>
    <style name="draw-spaces"                   foreground="aluminium"/>
    <style name="line-numbers"                  foreground="weird-gray" background="background"/>
    <style name="bracket-match"                 foreground="bone-white" background="background" underline="true"/>
    <style name="map-overlay"                   background="rgba(136,138,133,0.25)"/>
    <style name="background-pattern"            background="#2f313e"/>


    <!-- Diagnostics Underlining -->
    <style name="diagnostician::deprecated"     underline="error" underline-color="aluminium"/>
    <style name="diagnostician::error"          underline="error" underline-color="red"/>
    <style name="diagnostician::note"           underline="error" underline-color="skyblue"/>
    <style name="diagnostician::warning"        underline="error" underline-color="orange"/>
  
    <!-- Snippets -->
    <style name="snippet::tab-stop"             background="orange" foreground="aluminium"/>
    <style name="snippet::area"                 background="#rgba(86,114,151,.5)"/>

    <!-- Debugger -->
    <style name="debugger::current-breakpoint"  foreground="#2e3436" background="#fcaf3e"/>
    <style name="debugger::breakpoint"          foreground="#ffffff" background="#204a87"/>

    <!-- Hover links -->
    <style name="action::hover-definition"      background="#41464c" underline="true"/>

    <!-- Bracket Matching -->
    <style name="bracket-match"                 foreground="chocolate"/>
    <style name="bracket-mismatch"              foreground="aluminium" background="scarletred"/>

    <!-- Right Margin -->
    <style name="right-margin"                  foreground="#484749" background="#484749"/>

    <!-- Search Matching -->
    <style name="search-match"                  foreground="bone-white" background="selection"/>
    <style name="quick-highlight-match"         background="#rgba(78,154,6,.25)"/>

    <!-- Search Shadow -->
    <style name="search-shadow"                 background="#rgba(0,0,0,0.4)"/>

    <!-- Spellchecker Matching -->
    <style name="misspelled-match"              foreground="#000000" background="#b3d4fc"/>

    <!-- Comments -->
    <style name="def:comment"                   foreground="comment"/>
    <style name="def:shebang"                   foreground="aluminium"/>
    <style name="def:doc-comment-element"       italic="true"/>

    <!-- Constants -->
    <style name="def:constant"                  foreground="butter"/>
    <style name="def:string"                    foreground="yellow"/>
    <style name="def:special-char"              foreground="pink"/>
    <style name="def:special-constant"          foreground="plum"/>
    <style name="def:floating-point"            foreground="orange"/>
    <style name="def:function"                  foreground="green"/>
    <style name="def:number"                    foreground="purple" />
    <style name="def:boolean"                   foreground="purple"/>
    <style name="def:builtin"                   foreground="cyan"/>

    <!-- Identifiers -->
    <style name="def:identifier"                foreground="pink"/>

    <!-- Statements -->
    <style name="def:statement"                 foreground="pink"/>

    <!-- Types -->
    <style name="def:type"                      foreground="green"/>

    <!-- Others -->
    <style name="def:preprocessor"              foreground="green"/>
    <style name="def:error"                     foreground="aluminium" background="scarletred"/>
    <style name="def:note"                      background="butter" foreground="aluminium"/>
    <style name="def:underlined"                italic="true" underline="true"/>
    <style name="def:keyword"                   foreground="pink"/>
    <style name="def:specials"                  foreground="#f8f8f2"/>

    <!-- Heading styles, uncomment to enable -->
    <!--
    <style name="def:heading0"                  scale="5.0"/>
    <style name="def:heading1"                  scale="2.5"/>
    <style name="def:heading2"                  scale="2.0"/>
    <style name="def:heading3"                  scale="1.7"/>
    <style name="def:heading4"                  scale="1.5"/>
    <style name="def:heading5"                  scale="1.3"/>
    <style name="def:heading6"                  scale="1.2"/>
    -->

    <!-- Language specific -->
    <style name="diff:added-line"               background="#468410" foreground="#f8f8f2"/>
    <style name="diff:removed-line"             foreground="#8b080b"/>
    <style name="diff:changed-line"             background="#243a5f" foreground="#f8f8f2"/>
    <style name="diff:diff-file"                foreground="chameleon"/>
    <style name="diff:location"                 foreground="chameleon"/>
    <style name="diff:special-case"             foreground="white"/>

    <style name="python:module-handler"         foreground="pink"/>
    <style name="python:function-name"          foreground="green"/>
    <style name="python:decorator"              foreground="green"/>
    <style name="python:class-name"             foreground="white"/>
    <style name="python:special-variable"       foreground="cyan"/>
    <style name="python:builtin-constant"       foreground="purple"/>

    <style name="gutter:added-line"             foreground="chameleon"/>
    <style name="gutter:changed-line"           foreground="butter"/>
    <style name="gutter:removed-line"           foreground="scarletred"/>

    <style name="latex:command"                 foreground="chameleon"/>
    <style name="latex:include"                 use-style="def:preprocessor"/>

    <!-- Symbol-tree xml-pack coloring -->
    <style name="symboltree::label"             foreground="#000000" background="#D5E7FC"/>
    <style name="symboltree::id"                foreground="#000000" background="#D9E7BD"/>
    <style name="symboltree::style-class"       foreground="#000000" background="#DFCD9B"/>
    <style name="symboltree::type"              foreground="#000000" background="#F4DAC3"/>
    <style name="symboltree::parent"            foreground="#000000" background="#DEBECF"/>
    <style name="symboltree::class"             foreground="#000000" background="#FFEF98"/>
    <style name="symboltree::attribute"         foreground="#000000" background="#F0E68C"/>

</style-scheme>
